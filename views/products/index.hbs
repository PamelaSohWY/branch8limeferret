{{#extends 'base'}}

{{#block 'content'}}

<h1>Products</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Cost</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    {{#each products}}
    <tr>
        <td>
            {{this.id}}
        </td>
        <td>
            {{this.name}}
        </td>
        <td>
            {{this.cost}}
        </td>
        <td>
            {{this.description}}
        </td>
        <td>
            <a href='/products/{{this.id}}/update' class="btn btn-primary btn-sm">Edit</a>
            <a href='/products/{{this.id}}/delete' class="btn btn-danger btn-sm">Delete</a>
        </td>




    </tr>

    {{/each}}

</table>

{{/block}}

{{/extends}}